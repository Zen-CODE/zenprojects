<MDFloatingActionButton>:
    md_bg_color: app.theme_cls.primary_color

<MDBoxLayout>:
    md_bg_color: app.theme_cls.primary_color

<MDSlider>:
    min: 0
    max: 100

<MDIconButton>:
    size_hint: 1, 1

Screen:
    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 1, 1
            MDLabel:
                text: "Top row"
        MDBoxLayout:
            size_hint: 1, 8
            MDSlider:
                size_hint_x: 1
                orientation: "vertical"
            BoxLayout:
                size_hint_x: 8
                Image:
                    allow_stretch: True
                    source: '/home/richard/Music/Ace Ventura/Rebirth/cover.jpg'

            MDSlider:
                size_hint_x: 1
                orientation: "vertical"
        MDBoxLayout:
            size_hint: 1, 1
            spacing: 0.2 * self.width
            MDIconButton:
                icon: "stop"
            MDIconButton:
                icon: "rewind"
            MDIconButton:
                icon: "pause"
            MDIconButton:
                icon: "forward"
            MDIconButton:
                icon: "recycle"
