<MDFloatingActionButton>:
    md_bg_color: app.theme_cls.primary_color

<MDBoxLayout>:
    md_bg_color: app.theme_cls.primary_color

<MDSlider>:
    min: 0
    max: 100

<MDIconButton>:
    size_hint: 1, 1

Screen:
    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 1, 1
            spacing: 0.12 * self.width
            MDIconButton:
                icon: "music-note-quarter"
            MDIconButton:
                icon: "account-music"
            MDIconButton:
                icon: "album"
            MDIconButton:
                icon: "yin-yang"

            MDIconButton:
                icon: "folder-music"
            MDIconButton:
                icon: "playlist-music"
            MDIconButton:
                icon: "information"
        MDBoxLayout:
            size_hint: 1, 8
            MDSlider:
                size_hint_x: 1
                orientation: "vertical"
            BoxLayout:
                size_hint_x: 8
                Image:
                    allow_stretch: True
                    source: '/home/richard/Music/Ace Ventura/Rebirth/cover.jpg'

            MDSlider:
                size_hint_x: 1
                orientation: "vertical"
        MDBoxLayout:
            size_hint: 1, 1
            spacing: 0.2 * self.width
            MDIconButton:
                icon: "stop"
            MDIconButton:
                icon: "rewind"
            MDIconButton:
                icon: "pause"
            MDIconButton:
                icon: "forward"
            MDIconButton:
                icon: "recycle"
